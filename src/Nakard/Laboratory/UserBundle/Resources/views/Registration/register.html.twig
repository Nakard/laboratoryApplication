{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {{ form_start(form, { 'style': 'horizontal' }) }}
    {{ form_errors(form, { 'global_errors': true }) }}
    {{ form_row(form.username, { 'input_group': { 'prepend': '.icon-user' } }) }}
    {{ form_row(form.email, { 'input_group': { 'prepend': '.icon-envelope' } }) }}
    {{ form_row(form.firstName, { 'input_group' : { 'prepend': 'F' } }) }}
    {{ form_row(form.lastName, { 'input_group' : { 'prepend': 'L' } }) }}
    {{ form_row(form.pesel, { 'input_group' : { 'prepend': '.icon-book' } }) }}
    {{ form_row(form.plainPassword) }}
    {{ form_row(form.save) }}
    {{ form_end(form) }}
{% endblock %}